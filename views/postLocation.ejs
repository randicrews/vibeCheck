      crossorigin="anonymous"
    />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB7PigA3KZAJa5hqRGglC_uHD9g2BBbgME&libraries=places"></script>
  <script>
    google.maps.event.addDomListener(window, 'load', initialize);
      function initialize() {
        var input = document.getElementById('autocomplete_search');
        var autocomplete = new google.maps.places.Autocomplete(input);
        autocomplete.addListener('place_changed', function () {
        var place = autocomplete.getPlace();
        console.log(place, 'place')
        //make sure we know where we're going
        console.log(place.geometry['viewport']['Ua'].hi, 'lat')
        console.log(place.geometry['viewport']['Ha'].lo, 'long')
        console.log(place.formatted_address, 'phys')
        //confirmed - pull deets from place var, put in hidden inputs
        $('#lat').val(place.geometry['viewport']['Ua'].hi);
        $('#long').val(place.geometry['viewport']['Ha'].lo);
        $('#phys').val(place.formatted_address);
      });
    }
  </script>

</head>
<body>
  <div class="container">
    <a href="/home">back</a>
    <a href="/logout">logout</a>
    
      <form action="/place/new" method="post">
        <div><input type="text" name="name" placeholder="where did this happen? (address/venue)" id="autocomplete_search" name="autocomplete_search" type="text" class="form-control" required></div>
        <input type="hidden" name="lat" id="lat">
        <input type="hidden" name="long" id="long">
        <input type="hidden" name="phys" id="phys">
        <label for="reportType">please choose what best decribes your experience. please be aware that the contents of this menu may be triggering.</label>
        <select name="reportType" id="reportType" required >
          <option value="" disabled selected hidden> - - - - </option>
          <option value="accessibility issues">accessibility issues</option>
          <option value="hate speech (racist or xenophobic)">hate speech (racist or xenophobic)</option>
          <option value="hate speech (based on sexuality or gender)">hate speech (based on sexuality or gender)</option>
          <option value="hate speech (ableist)">hate speech (ableist)</option>          
          <option value="physical assault">physical assault</option>
          <option value="sexual assault">sexual assault</option>
          <option value="drugging (suspected)">drugging (suspected)</option>
          <option value="drugging (confirmed)">drugging (confirmed)</option>
          <option value="stalking">stalking</option>
        </select>
        <button class="btn-default" type="submit">next</button>
      </form>

  </div>

</body>


